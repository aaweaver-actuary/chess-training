{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "rootDir": "./",
    "outDir": "dist",
    "types": ["node", "vitest/importMeta"]
  },
  "include": ["src", "tests", "vitest.config.ts"],
  "exclude": ["dist", "node_modules"]
}
